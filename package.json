{
  "name": "pika-pack-template",
  "version": "1.0.0",
  "@pika/pack": {
    "pipeline": [
      [
        "@pika/plugin-ts-standard-pkg",
        {
          "exclude": [
            "__tests__/**/*"
          ]
        }
      ],
      [
        "@pika/plugin-build-node"
      ],
      [
        "@pika/plugin-simple-bin",
        {
          "bin": "cli-name"
        }
      ]
    ]
  },
  "scripts": {
    "build": "pika build",
    "test": "jest --passWithNoTests",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^11.0.0",
    "@pika/pack": "^0.5.0",
    "@pika/plugin-build-node": "^0.9.2",
    "@pika/plugin-simple-bin": "^0.9.2",
    "@pika/plugin-standard-pkg": "^0.9.2",
    "@pika/plugin-ts-standard-pkg": "^0.9.2",
    "@types/jest": "^26.0.19",
    "@types/yargs": "^15.0.12",
    "commitlint": "^11.0.0",
    "eslint": "^7.16.0",
    "jest": "^26.6.3",
    "typescript": "^4.1.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
